{
    "opts": {
        "destination": "doc",
        "recurse": true,
        "template": "node_modules/ink-docstrap/template"
    },

    "source": {
        "include": ["src", "README.md"]
    },

    "plugins": ["plugins/markdown"],

    "markdown": {
        "parser": "marked"
    },
    
    "templates": {
        "outputSourceFiles": true,
        "systemName": "weekstart",
        "copyright": "Copyright (c) 2017-present Denis Sikuler",
        "includeDate": false,
        "theme": "spacelab",
        "linenums": true
    }
}
